{
  "manifest_version": 3,
  "name": "SCU Schedule Helper",
  "version": "1.0",
  "description": "Helps you make a schedule with course professor color coding.", // TODO
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://www.myworkday.com/scu/*",
    "https://www.ratemyprofessors.com/*",
    "https://your-database-url.com/*" // TODO
  ],
  "content_scripts": [
    {
      "matches": ["https://www.myworkday.com/scu/*"],
      "js": ["scripts/fetchRMP.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"] // TODO
    }
  ],
  "background": {
    "service_worker": "background.js"
    //"persistent": false
  },
  "action": {
    "default_icon": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
